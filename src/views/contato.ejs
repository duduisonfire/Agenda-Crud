<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Cadastrar Contatos</h1>
        <p class="text-center lead">Crie ou edite seus contatos.</p>
        <%- include('includes/messages.ejs') %> 
        <div class="row">
          <div class="col my-3">
            <div class="col-lg">
                <h4>Cadastre seu contato</h4>
                <form action="/contato/register" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group">
                    <label>Nome</label>
                    <input type="text" class="form-control" name="nome" placeholder="Nome do Contato">
                  </div>
                  <div class="form-group my-3">
                    <label>Sobrenome</label>
                    <input type="text" class="form-control" name="sobrenome" placeholder="Sobrenome do Contato">
                  </div>
                  <div class="form-group my-3">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email do Contato">
                  </div>
                  <div class="form-group my-3">
                    <label>Telefone</label>
                    <input type="tel" class="form-control" name="telefone" placeholder="Telefone do Contato">
                  </div>
                  <button type="submit" class="btn btn-primary  my-3"">Cadastrar Contato</button>
                </form>
              </div>
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('includes/footer.ejs') %>