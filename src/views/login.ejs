<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Registro/Login</h1>
        <p class="text-center lead">Se cadastre ou faça login.</p>
        <%- include('includes/messages.ejs') %> 
        <div class="row">
          <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Seu Email</label>
                <input type="email" class="form-control" name="email" placeholder="seu email">
              </div>
              <div class="form-group my-3">
                <label>Sua senha</label>
                <input type="password" class="form-control" name="password" placeholder="senha">
              </div>
              <button type="submit" class="btn btn-primary  my-3"">Criar conta</button>
            </form>
          </div>
          <div class="col-lg">
            <h4>Faça seu login</h4>
            <form action="/login/login/" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Seu Email</label>
                <input type="email" class="form-control" name="email" placeholder="seu email">
              </div>
              <div class="form-group my-3">
                <label>Sua senha</label>
                <input type="password" class="form-control" name="password" placeholder="senha">
              </div>
              <button type="submit" class="btn btn-primary  my-3"">Entrar</button>
            </form>
          </div>
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
<%- include('includes/footer.ejs') %>